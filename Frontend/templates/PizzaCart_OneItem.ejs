<div class="cart-item">
    <span class="title"><%= pizza.title %> (<%= size %>)</span>
    <div class="price"><%= pizza[size].price %> USD</div>
    <div class="button-group">
        <button class="btn btn-danger minus">-</button>
        <span class="label label-default"><%= quantity %></span>
        <button class="btn btn-success plus">+</button>
        <button class="btn btn-warning remove">x</button>
    </div>
</div>