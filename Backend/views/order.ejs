<% include common/header.ejs %>
    
<div class="row order">
    <div class="col-md-7">
        <form class="form-horizontal">
            <h4>Contact information</h4>
            <div class="form-group name-group">
                <label class="col-sm-2 control-label">Name</label>
                <input class="form-control" type="text" id="nameInput" placeholder="Name">
            </div>
            <div class="form-group phone-group">
                <label class="col-sm-2 control-label">Phone</label>
                <input class="form-control" type="text" id="phoneInput" placeholder="+380000000000">
            </div>
            <div class="form-group address-group">
                <label class="col-sm-2 control-label">Address</label>
                <input class="form-control" type="text" id="addressInput" placeholder="e.g. Baker St. 221B">
            </div>
        </form>
    </div>
    <div class="col-md-5 order-info">
        <div class="summary">
            <h4>About the order</h4>
            <p class="order-time"><b>Order time:</b> unavailable</p>
            <p class="order-address"><b>Order address:</b> <span id="order-address">unavailable</span></p>
        </div>
    </div>
</div>
<div class="row next-nav">
    <button class="btn btn-primary next-btn" id="submit-order">Next ></button>
</div>

<div class="row map">
    <div class="google-maps" id="googleMap"></div>
</div>


</div>
<% include common/footer.ejs %>